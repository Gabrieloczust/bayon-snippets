{
  "name": "vscode-bayon-snippets",
  "publisher": "gabrieloczust",
  "displayName": "Bayon Snippets",
  "description": "Code snippets for React",
  "icon": "art/icon.png",
  "version": "3.1.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gabrieloczust/bayon-snippets/blob/master/README.md"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "Bayon",
    "Bayon React",
    "Bayon Snippets"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/typescript.json"
      }
    ],
    "configuration": {
      "title": "Biblioteca de Testes",
      "properties": {
        "bayonSnippets.library": {
          "type": "string",
          "default": "@mp/testing-frontend",
          "description": "Define a biblioteca padrão de testes para utilização nos snippets da extensão."
        }
      }
    }
  },
  "scripts": {
    "lint": "prettier . --write",
    "build": "ts-node scripts/generate-snippets.ts && pnpm exec vsce package",
    "publish": "pnpm run build && pnpm exec vsce publish",
    "install-extension": "ts-node scripts/install-extension.ts"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "dependencies": {
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "@vscode/vsce": "^3.6.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
