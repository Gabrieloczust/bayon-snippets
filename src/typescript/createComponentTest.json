{
  "createTest": {
    "prefix": ["cbct", "bct", "bt"],
    "body": [
      "import React from 'react';",
      "import { render, screen } from '@bayon/testing';",
      "",
      "import { ${TM_DIRECTORY}, type ${TM_DIRECTORY}Props } from './${TM_DIRECTORY}';",
      "",
      "describe('<${TM_DIRECTORY} />', () => {",
      "  it('should render component', () => {",
      "    createComponent();",
      "    expect(screen.getByText('$1')).toBeInTheDocument();",
      "  });",
      "});",
      "",
      "const createComponent = (props: Partial<${TM_DIRECTORY}Props> = {}) => {",
      "  const defaultProps: ${TM_DIRECTORY}Props = {",
      "    ...props,",
      "  };",
      "",
      "  return render(",
      "    <${TM_DIRECTORY} {...defaultProps} />",
      "  );",
      "};"
    ],
    "description": "Create a test for the component based on the file name"
  }
}
