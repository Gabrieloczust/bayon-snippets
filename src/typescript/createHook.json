{
  "createHook": {
    "prefix": ["cbh", "bh"],
    "body": [
      "export type T${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Args = {",
      "  $1",
      "};",
      "",
      "export const ${TM_FILENAME_BASE} = (args: T${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Args) => {",
      "  const $2 = () => {",
      "",
      "  };",
      "",
      "  return { $2 };",
      "};"
    ],
    "description": "Create a hook with a type based on the filename"
  }
}
