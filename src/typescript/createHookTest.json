{
  "createHookTest": {
    "prefix": ["cbht", "bht"],
    "body": [
      "import { renderHook } from '@bayon/testing';",
      "import { ${TM_FILENAME_BASE}, type T${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Args } from './${TM_FILENAME_BASE}';",
      "",
      "describe('${TM_FILENAME_BASE} hook', () => {",
      "  it('$1', () => {",
      "    const { result } = createHook();",
      "",
      "    result.current.$2();",
      "",
      "    expect($3).$4();",
      "  });",
      "});",
      "",
      "const createHook = (args: Partial<T${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Args> = {}) => {",
      "  const defaultArgs: T${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Args = {",
      "    ...args,",
      "  };",
      "",
      "  return renderHook(() => ${TM_FILENAME_BASE}(defaultArgs));",
      "};"
    ],
    "description": "Create a test for a hook based on the filename"
  }
}
